{
    "manifest_version": 3,
    "name": "Quick URL Copy",
    "version": "1.0",
    "description": "Copy current tab URL to clipboard with Cmd+Shift+C",
    "permissions": [
      "activeTab",
      "clipboardWrite",
      "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "commands": {
      "copy-url": {
        "suggested_key": {
          "default": "Ctrl+Shift+C",
          "mac": "Command+Shift+C"
        },
        "description": "Copy current tab URL"
      }
    },
    "icons": {
      "16": "icons/16x16.png",
      "32": "icons/32x32.png",
      "48": "icons/48x48.png",
      "128": "icons/128x128.png"
    }
  }